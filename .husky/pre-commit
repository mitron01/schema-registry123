@echo off
REM .husky/pre-commit — Windows (cmd.exe) version

setlocal

REM Путь к скрипту
set "SCRIPT=%~dp0..\scripts\checkSchemaCompat.mjs"

REM Запускаем через node
node "%SCRIPT%"
if %errorlevel% neq 0 (
    echo.
    echo Коммит отклонён: найдены ломающие изменения в JSON-схемах.
    exit /b 1
)

exit /b 0
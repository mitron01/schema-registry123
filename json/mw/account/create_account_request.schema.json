{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateAccountRequestDTO",
  "type": "object",
  "properties": {
    "login": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "password": {
      "type": "string"
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    }
  },
  "required": [
    "login",
    "password",
    "roles"
  ],
  "additionalProperties": false
}